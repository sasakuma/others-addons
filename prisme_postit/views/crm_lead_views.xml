<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">crm.case.form.view.oppor</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_schedule_meeting']"
                   position="before">
                <button class="oe_stat_button o_res_partner_tip_opp"
                        type="object"
                        context="{
                            'default_partner_id': partner_id,
                            'default_lead_ids': id,
                         }"
                        name="action_redirect_postit"
                        icon="fa-star">
                    <field string="Postit"
                           name="postit_count"
                           widget="statinfo"/>
                </button>
                <field name="postit_ids" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>